<%= form_for cat do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :birth_date %>
  <%= f.date_field :birth_date %>

  <%= f.label :color %>
  <%= f.text_field :color %>


  <%= f.label :sex %>
  <%= f.text_field :sex %>


  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.submit %>
<% end %>